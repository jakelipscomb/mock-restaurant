<h1>Your Cart</h1>
  <div class="cart-items">
    {{#each cartItems}}
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{productName}}</h5>
          <p class="card-text">
            <strong>Quantity:</strong> {{quantity}}<br>
            <strong>Price:</strong> {{price}}<br>
            <strong>Total:</strong> {{total}}
          </p>
        </div>
      </div>
    {{/each}}

    <div class="final-total">
      <h4>Final Total: {{finalTotal}}</h4>
    </div>
  </div>