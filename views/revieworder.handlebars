<h1>Choose Pickup Day and Time</h1>
    <form method="POST" action="/api/pickup">
        <label for="pickup_day">Select a pickup day:</label>
        <select name="pickup_day" id="pickup_day">
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <!-- Add more days as needed -->
        </select>
        <br>
        <label for="pickup_time">Select a pickup time:</label>
        <select name="pickup_time" id="pickup_time">
            <option value="10:00 AM">10:00 AM</option>
            <option value="12:00 PM">12:00 PM</option>
            <option value="2:00 PM">2:00 PM</option>
            <!-- Add more times as needed -->
        </select>
        <br>
        <input type="submit" value="Confirm Pickup Time">
    </form>